<!-- Validation failure messages -->
<% if @tag.errors.any? %>
  <% @tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Tag</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_tag" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for video_id -->
      <div class="form-group">
        <label for="video_id" class="control-label">
          Video
        </label>

        <%= select_tag(:video_id, options_from_collection_for_select(Video.all, :id, :caption, @tag.video_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Tag
      </button>
      or
      <a href="/tags">Cancel</a>
    </form>
  </div>
</div>
