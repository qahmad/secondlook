<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/users/<%= @video.user.id %> "><%= @video.user.username %></a>
          <small>
            <%= time_ago_in_words(@video.created_at) %> ago
          </small>
        </h3>
      </div>

      <div class="panel-body" align="center">
        <iframe width="666" height="360" src="<%= @video.platform.embed_link %>/<%= @video.videolink %>?start=<%= @video.starttime %>" frameborder="0" allowfullscreen></iframe>

        <div class="media-body">
          <b><%= @video.caption %> at <%= Time.at(@video.starttime).utc.strftime("%H:%M:%S") %></b>
        </div>

    <% @video.comments.each do |comment| %>

      <ul class="media-list">

        <li class="media">
          <div class="media-body" align="left">
            <h6 class="media-heading">
              <a href="/users/<%= comment.user_id %>"><%= comment.user.username %></a>
              <small>
                <%= time_ago_in_words(comment.created_at) %> ago
              </small>
            </h6>
            <%= comment.body %>
          </div>
        </li>
      </ul>

    <% end %>


      <ul class="media-list">
        <li class="media">
          <div class="media-body">
            <form action="/create_comment" method="post">
              <!-- Hidden input for authenticity token to protect from forgery -->
              <input name="authenticity_token" type="hidden" value="12sJz9qQY6R+2CaxrGsRgMe/3wXOAIIqqkDSFHYK1tXc2Ph2UX3zSc17IWlIWCgfKapscHGahGQeqeDJ+DgL6w==">

              <input type="hidden" name="video_id" value="<%= @video.id%>">

              <input type="hidden" name="user_id" value="<%= current_user.id %>">

              <!-- Label and input for body -->
              <div class="form-group">
                <label for="body" class="sr-only">
                  Body
                </label>

                <div class="input-group">
                  <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required>

                  <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                      <i class="fa fa-commenting-o"></i>
                    </button>
                  </span>
                </div><!-- /input-group -->
              </div>
            </form>
          </div>
        </li>
      </ul>

        <div class="btn-group btn-group-justified">
          <a href="/videos" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>
          <% if current_user.id == @video.user_id %>
  
              <a href="/videos/<%= @video.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_video/<%= @video.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
                  
          <% end %>  
            </div>

      </div>
    </div>
  </div>
</div>
