<div class="page-header">
  <h1>
    Platforms
    <a href="/platforms/new" class="btn btn-lg btn-success">New Platform</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Embed link</th>
        <th>Actions</th>
      </tr>

      <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.name %></td>
        <td><%= platform.embed_link %></td>
        <td>
          <a href="/platforms/<%= platform.id %>" class="btn btn-primary">Show</a>
          <a href="/platforms/<%= platform.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_platform/<%= platform.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @platforms, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
